			function convertToYYYYMMDD(dateString) {
  const date = new Date(dateString);

  // Lấy năm, tháng, ngày từ đối tượng Date
  const year = date.getFullYear();
  const month = date.getMonth() + 1;  // getMonth trả về 0-11, cộng 1 để có tháng từ 1-12
  const day = date.getDate();

  // Đảm bảo thêm số 0 phía trước nếu tháng hoặc ngày chỉ có một chữ số
  const formattedMonth = month < 10 ? `0${month}` : month;
  const formattedDay = day < 10 ? `0${day}` : day;

  // Trả về chuỗi định dạng yyyy/mm/dd
  return `${year}/${formattedMonth}/${formattedDay}`;
}
