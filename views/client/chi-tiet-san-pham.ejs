<!DOCTYPE html>
<html lang="vi">
<%- include('partials/head', { title: title }) %>
<body>
    <%- include('partials/header') %>

    <div class="navi">
        <div class="w-ct padding15">
            <a href="/">Trang chủ</a><span>/</span>
            <a href="/san-pham/tat-ca-san-pham">Sản phẩm</a><span>/</span>
            <span><%= product.name %></span>
        </div>
    </div>

    <div class="w-ct padding15 clearfix">
        <div class="row">
            <div class="col-md-5 col-sm-6 col-xs-12">
                <div class="p-img-detail">
                    <img src="<%= BASE_URL %><%= product.images[0] %>" alt="<%= product.name %>" width="100%">
                </div>
            </div>
            <div class="col-md-7 col-sm-6 col-xs-12">
                <div class="p-info-detail">
                    <h1 class="htitle2" style="margin-top: 0;"><%= product.name %></h1>
                    <div class="p-detail-item"><strong>Hãng sản xuất:</strong> <%= product.manufacturer ? product.manufacturer.name : 'Đang cập nhật' %></div>
                    <div class="p-detail-item"><strong>Model:</strong> <%= product.model %></div>
                    <div class="p-detail-item"><strong>Mã sản phẩm:</strong> <%= product.idProduct %></div>
                    <p class="price-box-detail">Giá: <span class="hotline-detail">Liên hệ</span></p>
                    <div class="p-desc-short"><%= product.describe %></div>
                    <div class="p-contact-btn">
                        <a href="tel:0888406268" class="btn-call-detail"><i class="fa fa-phone"></i> Gọi ngay: 0888 40 62 68</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="p-content-detail" style="margin-top: 30px;">
            <div class="htitle1"><span>Chi tiết sản phẩm</span></div>
            <div class="fixmobile clearfix" id="content">
                <%- product.detailProduct %>
            </div>
        </div>

        <div class="related-products" style="margin-top: 40px;">
            <div class="htitle1"><span>Sản phẩm liên quan</span></div>
            <div id="related-p" class="owl-carousel"></div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <%- include('partials/social_ring') %>
    <%- include('partials/scripts') %>

    <script>
        const BASE_URL = '<%= BASE_URL %>';
        (async () => {
            const relatedP = document.querySelector('#related-p');
            const res = await fetch(`/san-pham/related/<%= product._id %>`);
            const data = await res.json();
            if (data && data.length > 0) {
                data.forEach(value => {
                    relatedP.innerHTML += `
                        <div class="item">
                            <div class="p-i">
                                <a class="p-img" href="/san-pham/${value.slug}">
                                    <img src="${BASE_URL}${value.images[0]}" alt="${value.name}" />
                                </a>
                                <h3><a href="/san-pham/${value.slug}">${value.name}</a></h3>
                                <p class="price-box"><span class="price-news">Giá: Liên hệ</span></p>
                            </div>
                        </div>
                    `;
                });
            }
            $("#related-p").owlCarousel({
                loop: true,
                dots: false,
                autoplay: true,
                responsive: {
                    0: { items: 2 },
                    480: { items: 3 },
                    767: { items: 4 },
                    1000: { items: 6 }
                }
            });
        })();
    </script>
</body>
</html>
