<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>DASHMIN - Bootstrap Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="icon"
      type="image/x-icon"
      href="<%= process.env.FAVICON_PATH %>"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link
      href="/views/admin/lib/owlcarousel/assets/owl.carousel.min.css"
      rel="stylesheet"
    />
    <link
      href="/views/admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css"
      rel="stylesheet"
    />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/views/admin/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="/views/admin/css/style.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
      <!-- Spinner Start -->
      <div
        id="spinner"
        class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center"
      >
        <div
          class="spinner-border text-primary"
          style="width: 3rem; height: 3rem"
          role="status"
        >
          <span class="sr-only">Loading...</span>
        </div>
      </div>
      <!-- Spinner End -->
      <div class="sidebar pe-4 pb-3">
        <nav class="navbar bg-light navbar-light">
          <a href="/admin/home" class="navbar-brand mx-4 mb-3">
            <img src="/public/static/logo.png" width="200px" alt="" />
          </a>

          <div class="navbar-nav w-100">
            <a href="/san-pham/admin" class="nav-item nav-link"
              ><i class="fa fa-tachometer-alt me-2"></i>Sản phẩm</a
            >
            <a href="/gioi-thieu/admin" class="nav-item nav-link"
              ><i class="fa fa-th me-2"></i>Trang giới thiệu</a
            >

            <a href="/tin-tuc/admin" class="nav-item nav-link"
              ><i class="fa fa-table me-2"></i>Bài viết</a
            >

            <a href="/account/admin/tai-khoan" class="nav-item nav-link"
              ><i class="fa fa-user me-2"></i>Tài khoản</a
            >

            <a href="/danh-muc/admin" class="nav-item nav-link"
              ><i class="fa fa-table me-2"></i>Danh mục</a
            >
            <a href="/hang-san-xuat/admin" class="nav-item nav-link"
              ><i class="fa fa-table me-2"></i>Hãng sản xuất</a
            >
            <a href="/account/list-tai-khoan" class="nav-item nav-link"
              ><i class="fa fa-table me-2"></i>Danh sách tài khoản</a
            >
            <a href="/nha-cung-cap/admins" class="nav-item nav-link"
              ><i class="fa fa-table me-2"></i>Nhà cung cấp</a
            >
            <a href="/khach-hang/admin" class="nav-item nav-link"
              ><i class="fa fa-table me-2"></i>Khách hàng</a
            >
            <a href="/lien-he/admin" class="nav-item nav-link"
              ><i class="fa fa-table me-2"></i>Liên hệ</a
            >
            <a href="/thuong-hieu/admin" class="nav-item nav-link"
              ><i class="fa fa-table me-2"></i>Thương hiệu</a
            >
            <a href="/hotline/admin" class="nav-item nav-link"
              ><i class="fa fa-table me-2"></i>Thông tin</a
            >
          </div>
        </nav>
      </div>
      <div class="content">
        <div class="container-fluid pt-4 px-4">
          <div class="row g-4">
            <div class="col-12">
              <div class="bg-light rounded h-100 p-4">
                <div class="d-flex justify-content-between py-4">
                  <h6 class="mb-4">Hãng sản xuất</h6>
                  <div>
                    <button
                      class="btn btn-success"
                      data-bs-toggle="modal"
                      data-bs-target="#addCategoryModal"
                    >
                      Thêm Hãng sản xuất
                    </button>
                  </div>
                </div>
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Tên Hãng sản xuất</th>

                        <th scope="col">Hành động</th>
                      </tr>
                    </thead>
                    <tbody id="table">
                      <% manufacturers.forEach(manufacturer => { %>
                      <tr>
                        <td><%= manufacturer.name %></td>

                        <td>
                          <button
                            class="btn btn-info"
                            data-manufacturer-id="<%= manufacturer._id %>"
                          >
                            Sửa
                          </button>
                          <button
                            class="btn btn-danger delete-btn"
                            data-manufacturer-id="<%= manufacturer._id %>"
                          >
                            Xóa
                          </button>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Content End -->

      <!-- Back to Top -->
      <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"
        ><i class="bi bi-arrow-up"></i
      ></a>
    </div>
    <div
      class="modal fade"
      id="addCategoryModal"
      tabindex="-1"
      aria-labelledby="addCategoryModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addCategoryModalLabel">
              Thêm Hãng sản xuất
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form action="/hang-san-xuat/add" id="add-hang">
              <div class="mb-3">
                <label for="name" class="form-label">Tên Hãng sản xuất</label>
                <input type="text" class="form-control" id="name" name="name" />
              </div>
              <button type="submit" class="btn btn-primary">Lưu</button>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Đóng
            </button>
          </div>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="editCategoryModal"
      tabindex="-1"
      aria-labelledby="editCategoryModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editCategoryModalLabel">
              Hàng sản xuất
            </h5>
            <p id="hidden"></p>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="editCategoryForm">
              <div class="mb-3">
                <label for="nameEdit" class="form-label"
                  >Tên Hãng sản xuất</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="nameEdit"
                  name="name"
                />
              </div>
              <button type="submit" class="btn btn-primary" id="saveChangesBtn">
                Lưu Thay Đổi
              </button>
              <p id="err"></p>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Đóng
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/views/admin/lib/chart/chart.min.js"></script>
    <script src="/views/admin/lib/easing/easing.min.js"></script>
    <script src="/views/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="/views/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/views/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/views/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/views/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Template Javascript -->
    <script src="/views/admin/js/main.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("add-hang");

        form.addEventListener("submit", function (event) {
          event.preventDefault(); // Ngăn form submit theo cách truyền thống
          const formData = {
            name: document.querySelector("#name").value,
          };

          fetch(form.action, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(formData),
          })
            .then((response) => response.json()) // Giả sử server trả về JSON
            .then((data) => {
              if (data.success) {
                alert("Thêm hãng sản xuất thành công!");
                window.location.reload();
              } else {
                alert("Thêm thất bại: " + data.message); // Hiển thị lỗi nếu có
              }
            })
            .catch((error) => {
              console.error("Error:", error);
              alert("Có lỗi xảy ra, không thể thêm hãng sản xuất.");
            });
        });
      });
    </script>
    <script>
      document.querySelectorAll(".delete-btn").forEach((button) => {
        button.addEventListener("click", function () {
          const categoryId = this.getAttribute("data-manufacturer-id");
          console.log(categoryId);
          if (
            confirm(
              "Bạn có chắc chắn muốn xóa hãng SX này và các sản phẩm của Hãng?"
            )
          ) {
            fetch(`/hang-san-xuat/${categoryId}`, {
              method: "DELETE",
            })
              .then((response) => {
                if (response.ok) {
                  return response.json();
                } else {
                  throw new Error("Something went wrong");
                }
              })
              .then((data) => {
                alert(data.message); // Hiển thị thông báo thành công từ server
                window.location.reload(); // Tải lại trang để cập nhật danh sách
              })
              .catch((error) => {
                alert(error.message); // Hiển thị lỗi nếu có
              });
          }
        });
      });
    </script>
    <script>
      var categoriesJson = "<%- escape(JSON.stringify(manufacturers)) %>";
      var categories = JSON.parse(unescape(categoriesJson));
      var BASE_URL = "<%- process.env.BASE_URL %>";
      document.querySelectorAll(".btn-info").forEach((btn) => {
        btn.addEventListener("click", function () {
          const categoryId = this.getAttribute("data-manufacturer-id");
          const form = document.getElementById("editCategoryForm");
          form.action = `/hang-san-xuat/edit/${categoryId}`;
          const category = categories.find(
            (category) => category._id === categoryId
          );

          if (category) {
            document.getElementById("nameEdit").value = category.name;

            $("#editCategoryModal").modal("show");
          }
        });
      });
      document
        .getElementById("editCategoryForm")
        .addEventListener("submit", function (event) {
          event.preventDefault(); // Ngăn chặn hành vi submit mặc định của form

          // Thu thập dữ liệu từ các trường form
          const formData = {
            name: document.getElementById("nameEdit").value,
          };

          // Gửi yêu cầu fetch tới URL được định nghĩa trong 'action' của form
          fetch(this.action, {
            method: "PUT", // Sử dụng phương thức PUT
            headers: {
              "Content-Type": "application/json", // Thiết lập header Content-Type cho dữ liệu JSON
            },
            body: JSON.stringify(formData), // Chuyển đối tượng dữ liệu thành chuỗi JSON
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                console.log("Update success:", data);
                window.location.reload(); // Cập nhật trang để thể hiện sự thay đổi
              } else {
                throw new Error(data.message || "Failed to update category");
              }
            })
            .catch((error) => {
              console.error("Error:", error);

              window.location.reload();
            });
        });
    </script>
  </body>
</html>
