    <!-- Thêm phần script để fetch dữ liệu từ server -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Tạo một fetch request để lấy dữ liệu từ server
        fetch("/hotline")
          .then((response) => {
            if (!response.ok) {
              throw new Error("Network response was not ok");
            }
            return response.json(); // Chuyển đổi dữ liệu từ JSON sang JavaScript object
          })
          .then((data) => {
            // Xử lý dữ liệu khi fetch thành công
            if (data.phone) {
              document.getElementById("phone").value = data.phone; // Đặt giá trị cho input phone
            }
            if (data.email) {
              document.getElementById("email").value = data.email; // Đặt giá trị cho input email
            }
          })
          .catch((error) => {
            // Xử lý khi có lỗi fetch dữ liệu
            console.error("Fetch error:", error);
          });
      });
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("hotlineForm");

        form.addEventListener("submit", function (event) {
          event.preventDefault(); // Ngăn chặn hành vi submit mặc định của form

          const formData = new FormData(this);
          const jsonData = {
            phone: formData.get("phone"),
            email: formData.get("email"),
          };

          fetch(form.action, {
            method: "PUT", // Thay đổi phương thức thành PUT
            headers: {
              "Content-Type": "application/json", // Đặt Content-Type là application/json
            },
            body: JSON.stringify(jsonData), // Chuyển đối tượng JSON thành chuỗi
          })
            .then((response) => {
              if (!response.ok) {
                throw new Error("HTTP status " + response.status);
              }
              return response.json();
            })
            .then((data) => {
              if (data.message) {
                alert(data.message); // Hiển thị thông báo từ server
              } else {
                alert("Cập nhật thông tin thành công!");
                window.location.reload(); // Tải lại trang để cập nhật dữ liệu trên UI
              }
            })
            .catch((error) => {
              console.error("Lỗi:", error);
              alert("Đã có lỗi xảy ra khi cập nhật thông tin.");
            });
        });
      });
    </script>
