    <script>
      CKEDITOR.replace("editor", {});
    </script>
    <script>
      function previewImage() {
        var file = document.getElementById("avt").files[0];
        if (file) {
          var reader = new FileReader();
          reader.onload = function (e) {
            var previewImage = document.getElementById("previewImage");
            previewImage.src = e.target.result;
            previewImage.style.display = "block"; // Make the preview image visible
          };
          reader.readAsDataURL(file);
        }
      }
      document.addEventListener("DOMContentLoaded", function () {
        var fileInput = document.getElementById("avt");
        if (fileInput) {
          fileInput.addEventListener("change", previewImage);
        }
      });
    </script>
    <script>
      function removeDiacritics(str) {
        return str.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
      }

      // Hàm chuyển đổi chuỗi thành slug
      function convertToSlug(str) {
        return removeDiacritics(str).toLowerCase().trim().replace(/\s+/g, "-");
      }

      // Lắng nghe sự kiện khi người dùng nhập vào ô "Tên Danh Mục"
      document.getElementById("name").addEventListener("input", function () {
        var nameProduct = this.value;

        var slug = convertToSlug(nameProduct);

        document.getElementById("slug").value = slug;
      });
    </script>
    <script>
      document
        .getElementById("addPostbrand")
        .addEventListener("submit", function (event) {
          event.preventDefault(); // Prevent the form from submitting through the browser

          CKEDITOR.instances.editor.updateElement(); // Update the data from CKEditor into the textarea

          const formData = new FormData(this); // Create a FormData object with the updated form data

          // Send the form data to the server via fetch API
          fetch("/thuong-hieu/create", {
            method: "POST",
            body: formData,
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert("Lưu thành công!");
                console.log(data); // Process the received data
                window.location.href = "/thuong-hieu/admin"; // Redirect after successful save
              } else {
                throw new Error(data.message || "Unknown error occurred");
              }
            })
            .catch((error) => {
              console.error("Lỗi:", error);
              alert("Đã có lỗi xảy ra khi lưu: " + error.message);
            });
        });
    </script>
