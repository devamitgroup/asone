    <script src="/views/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="/views/admin/js/main.js"></script>
    <script>
      document
        .getElementById("registerAccount")
        .addEventListener("submit", function (event) {
          event.preventDefault(); // Prevent the form from submitting through the browser

          const formData = new FormData(this); // Create a FormData object with the updated form data

          // Send the form data to the server via fetch API
          fetch("/account/register", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(
              Object.fromEntries(new FormData(event.target))
            ),
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert("Tạo thành công tài khoản");
                console.log(data); // Process the received data
                window.location.href = "/account/list-tai-khoan"; // Redirect after successful save
              } else {
                throw new Error(data.message || "Unknown error occurred");
              }
            })
            .catch((error) => {
              console.error("Lỗi:", error);
              alert("Đã có lỗi xảy ra khi lưu: " + error.message);
            });
        });
    </script>
