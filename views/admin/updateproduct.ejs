    <script>
      var BASE_URL = "<%- process.env.BASE_URL %>";
      var product = JSON.parse(
        unescape("<%- escape(JSON.stringify(product)) %>")
      );

      document.addEventListener("DOMContentLoaded", function () {
        // Now you can use the product variable in your client-side JavaScript
        console.log(product);

        const output = document.getElementById("preview-img-product");

        if (product.images && product.images.length > 0) {
          product.images.forEach(function (imageUrl) {
            const img = document.createElement("img");
            img.src = BASE_URL + imageUrl;
            img.style.width = "100px";
            img.style.marginRight = "10px";
            output.appendChild(img);
          });
        }
      });

      document.addEventListener("DOMContentLoaded", function () {
        const bestSellerCheckbox = document.getElementById("bestSeller");
        const bestSellingHidden = document.getElementById("bestSellingHidden");

        bestSellerCheckbox.addEventListener("change", function () {
          bestSellingHidden.value = this.checked ? "true" : "false";
        });
      });
    </script>
    <script>
      document
        .getElementById("productImageInput")
        .addEventListener("change", function (event) {
          var output = document.getElementById("preview-img-product");
          output.innerHTML = ""; // Xóa ảnh xem trước cũ nếu có

          if (this.files) {
            Array.from(this.files).forEach(function (file) {
              var reader = new FileReader();
              reader.onload = function (e) {
                var img = document.createElement("img");
                img.src = e.target.result;
                img.style.width = "150px"; // Đặt kích thước ảnh xem trước
                img.style.marginRight = "10px"; // Khoảng cách giữa các ảnh
                output.appendChild(img);
              };
              reader.readAsDataURL(file);
            });
          }
        });
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        fetch("/hang-san-xuat")
          .then((response) => response.json())
          .then((manufacturers) => {
            const selectElement = document.getElementById("list_manufacturer");
            selectElement.innerHTML = "";

            manufacturers.forEach((manufacturer) => {
              const option = document.createElement("option");
              option.textContent = manufacturer.name;
              option.value = manufacturer._id;
              selectElement.appendChild(option);
            });

            // Chọn sẵn nhà sản xuất của sản phẩm
            selectElement.value = "<%= product.manufacturer._id %>";
          })
          .catch((error) =>
            console.error("Error loading manufacturers:", error)
          );

        fetch("/danh-muc-con")
          .then((response) => response.json())
          .then((categories) => {
            const selectElement = document.getElementById("categoryList");
            selectElement.innerHTML = "";

            categories.forEach((category) => {
              const option = document.createElement("option");
              option.textContent = category.name;
              option.value = category._id;
              selectElement.appendChild(option);
            });

            // Chọn sẵn danh mục của sản phẩm
            selectElement.value = "<%= product.category._id %>";
          })
          .catch((error) => console.error("Error loading categories:", error));
      });
    </script>
    <script>
      function removeDiacritics(str) {
        return str.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
      }

      // Hàm chuyển đổi chuỗi thành slug
      function convertToSlug(str) {
        return removeDiacritics(str).toLowerCase().trim().replace(/\s+/g, "-");
      }

      // Lắng nghe sự kiện khi người dùng nhập vào ô "Tên Danh Mục"
      document.getElementById("name").addEventListener("input", function () {
        var nameProduct = this.value;

        var slug = convertToSlug(nameProduct);

        document.getElementById("slug").value = slug;
      });
    </script>
    <script>
      document
        .getElementById("updateProduct")
        .addEventListener("submit", function (event) {
          event.preventDefault(); // Ngăn chặn hành vi submit mặc định của form

          CKEDITOR.instances.editor.updateElement(); // Cập nhật dữ liệu từ CKEditor vào textarea

          const formData = new FormData(this); // Tạo FormData với dữ liệu form

          const actionUrl = this.action; // Lấy URL từ thuộc tính action của form
          console.log(actionUrl);
          // Sử dụng fetch để gửi yêu cầu PUT
          fetch(actionUrl, {
            method: "PUT", // Thay đổi phương thức thành PUT
            body: formData,
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                alert("Cập nhật sản phẩm thành công!");
                window.location.href = "/san-pham/admin"; // Điều hướng người dùng sau khi cập nhật thành công
              } else {
                throw new Error(data.message);
              }
            })
            .catch((error) => {
              console.error("Lỗi:", error);
              alert("Đã có lỗi xảy ra khi cập nhật sản phẩm.");
            });
        });
    </script>
