      <!-- Content Start -->
      <div class="content">
        <div class="container-fluid pt-4 px-4">
          <div class="row g-4">
            <div class="col-sm-12">
              <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Chỉnh sửa sản phẩm</h6>
                <form
                  id="updateProduct"
                  action="/san-pham/edit/<%= product._id %>"
                  enctype="multipart/form-data"
                >
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="name"
                      placeholder="name@example.com"
                      value="<%= product.name %>"
                      name="name"
                    />
                    <label for="floatingInput">Tên sản phẩm</label>
                  </div>
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="slug"
                      placeholder="Đường dẫn SEO"
                      value="<%= product.slug %>"
                      name="slug"
                    />
                    <label for="floatingInput">Đường dẫn SEO</label>
                  </div>
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="model"
                      name="model"
                      value="<%= product.model %>"
                      placeholder="Model"
                    />
                    <label for="floatingPassword">Model sản phẩm</label>
                  </div>
                  <div class="form-floating mb-3">
                    <span>Hãng sản xuất</span>
                    <select
                      class="form-control"
                      name="manufacturer"
                      id="list_manufacturer"
                    ></select>
                  </div>
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="idProduct"
                      name="idProduct"
                      value="<%= product.idProduct %>"
                      placeholder="Model"
                    />
                    <label for="floatingPassword">Mã sản phẩm</label>
                  </div>
                  <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input"
                    id="bestSeller" name="bestSeller" <%= product.bestSelling ?
                    "checked" : "" %> />
                    <label class="form-check-label" for="bestSeller"
                      >Sản phẩm bán chạy</label
                    >
                    <input type="hidden" name="bestSelling"
                    id="bestSellingHidden" value="<%= product.bestSelling ?
                    "true" : "false" %>" />
                  </div>

                  <div class="form-floating mb-3">
                    <span>Danh mục</span>
                    <select
                      class="form-control"
                      name="category"
                      id="categoryList"
                    ></select>
                  </div>
                  <div class="form-floating mb-3">
                    <input
                      multiple
                      type="file"
                      name="images"
                      class="form-control"
                      id="productImageInput"
                    />
                  </div>

                  <div class="mb-3">
                    <span>Ảnh sản phẩm</span>
                    <div id="preview-img-product" class="d-flex"></div>
                  </div>
                  <div class="form-floating mb-3">
                    <span>Mô tả</span>
                    <textarea name="describe" class="form-control">
<%= product.describe %></textarea
                    >
                  </div>
                  <div class="form-floating">
                    <textarea id="editor" name="detailProduct">
<%= product.detailProduct %></textarea
                    >
                  </div>
                  <div class="d-flex py-4 justify-content-center">
                    <button type="submit" class="btn btn-success">Lưu</button>
                  </div>
                </form>
