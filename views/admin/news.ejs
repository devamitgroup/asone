    <!-- Template Javascript -->
    <script src="/views/admin/js/main.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        fetchNews(); // Call fetchNews on page load
      });

      function fetchNews() {
        fetch("/tin-tuc/get-tin-tuc")
          .then((response) => response.json())
          .then((data) => {
            const newsTableBody = document.getElementById("newsTableBody");
            newsTableBody.innerHTML = ""; // Clear existing entries

            data.forEach((newsItem) => {
              const row = newsTableBody.insertRow(); // Create a new row
              const titleCell = row.insertCell(0);
              titleCell.textContent = newsItem.name; // Assuming 'title' is a field in your news items

              const actionCell = row.insertCell(1);
              actionCell.innerHTML = `<a href="/tin-tuc/admin/${newsItem.slug}" class="btn btn-info">Edit</a>
                                <button onclick="deleteNews('${newsItem._id}')" class="btn btn-danger">Delete</button>`;
            });
          })
          .catch((error) => console.error("Error fetching news:", error));
      }

      function deleteNews(id) {
        fetch(`/tin-tuc/delete/${id}`, { method: "DELETE" })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              alert("News deleted successfully");
              fetchNews(); // Refresh the news list after deletion
            } else {
              alert("Error deleting news");
            }
          })
          .catch((error) => console.error("Error deleting news:", error));
      }
    </script>
